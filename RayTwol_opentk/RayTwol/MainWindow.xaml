        <ComboBox x:Name="dropdown_Levels" Margin="465,10,93,0" VerticalAlignment="Top" Height="28" BorderBrush="Black" Foreground="#FFFFD933" FontFamily="Consolas" Style="{DynamicResource ComboBoxStyle1}" FontSize="16" MaxDropDownHeight="720" SelectionChanged="dropdown_Levels_SelectionChanged">
            <ComboBox.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#FF141C1D" />
            </ComboBox.Resources>
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FF233133" Offset="0"/>
