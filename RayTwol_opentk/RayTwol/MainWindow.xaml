        <Border BorderBrush="#FF1E4139" BorderThickness="1" HorizontalAlignment="Left" Height="106" Margin="12,0,0,10" VerticalAlignment="Bottom" Width="285" Background="#FF162022"/>
        <Label x:Name="label_CamSpeed" Content="Cam speed:" HorizontalAlignment="Left" Margin="625,0,0,9" VerticalAlignment="Bottom" Foreground="#FFCEFF6A" FontSize="14" FontWeight="Bold"/>
        <TextBox x:Name="textbox_MoveSpeed" HorizontalAlignment="Left" Height="26" Margin="710,0,0,10" TextWrapping="Wrap" Text="40" VerticalAlignment="Bottom" Width="36" Foreground="#FFCEFF6A" FontSize="16" BorderBrush="#FF1E4139" CaretBrush="#FFCEFF6A" TextChanged="textbox_MoveSpeed_TextChanged">
            <TextBox.Background>
